<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_form_producto_etiqueta_ubicacion" model="ir.ui.view">
		<field name="name">Campo para Ubicar producto</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_only_form_view"/>
		<field name="arch" type="xml">
			<field name="categ_id" position="after">
				<field name="etiqueta_ubicacion"/>
			</field>
		</field>
	</record>

	<record id="view_tree_producto_etiqueta_ubicacion" model="ir.ui.view">
		<field name="name">Campo para Ubicar producto en lista</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_tree_view"/>
		<field name="arch" type="xml">
			<field name="type" position="replace">
				<field name="type" invisible="1"/>
				<field name="etiqueta_ubicacion"/>
			</field>
		</field>
	</record>

</odoo>

